{
    "name": "oru/harness262",
    "description": "PHP based ECMAScript test262 harness",
    "type": "library",
    "license": "BSD-3-Clause",
    "version": "0.1",
    "authors": [
        {
            "name": "Felix Jahn",
            "email": "felix.jahn@outlook.com"
        }
    ],
    "repositories": {
        "test262": {
            "type": "package",
            "package": {
                "name": "tc39/test262",
                "version": "5.0.0",
                "source": {
                    "url": "https://github.com/tc39/test262",
                    "type": "git",
                    "reference": "main"
                }
            }
        }
    },
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "symfony/yaml": "^6.2",
        "tc39/test262": "^5.0",
        "fidry/cpu-core-counter": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-phpunit": "^0.18.4",
        "symplify/easy-coding-standard": "11.2.4.72",
        "vimeo/psalm": "^5.6",
        "infection/infection": "*",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload": {
        "psr-4": {
            "Oru\\Harness\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    },
    "bin": [
        "bin/harness"
    ]
}
