{
    "name": "oru/harness262",
    "description": "PHP based ECMAScript test262 harness",
    "type": "library",
    "license": "BSD-3-Clause",
    "version": "0.2.1",
    "authors": [
        {
            "name": "Felix Jahn",
            "email": "felix.jahn@outlook.com"
        }
    ],
    "repositories": {
        "test262": {
            "type": "package",
            "package": {
                "name": "tc39/test262",
                "version": "dev-main",
                "dist": {
                    "type": "zip",
                    "url": "https://api.github.com/repos/tc39/test262/zipball/",
                    "reference": "main",
                    "shasum": ""
                }
            }
        }
    },
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "symfony/yaml": "^6.2",
        "tc39/test262": "dev-main",
        "fidry/cpu-core-counter": "*",
        "symfony/process": "*",
        "symfony/console": "*"
    },
    "require-dev": {
        "oru/ecma262core": "dev-main",
        "phpunit/phpunit": "^12.0",
        "symplify/easy-coding-standard": "^11.2",
        "infection/infection": "*",
        "friendsofphp/php-cs-fixer": "*",
        "behat/behat": "^3.13",
        "phpstan/phpstan": "^2.1",
        "php-di/php-di": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Oru\\Harness\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    },
    "bin": [
        "bin/harness"
    ],
    "scripts": {
        "qa": [
            "phpunit --no-coverage",
            "behat -f progress",
            "phpstan analyze src -l10",
            "infection -j12 --no-progress"
        ]
    }
}
